<% include ./partials/header.ejs %>

<style>


body {
    font-family: 'Roboto', sans-serif;
    overflow: hidden;
    background-image: url(https://i.postimg.cc/YS83jfwy/1.jpg);
    -webkit-background-size: cover;
    background-size: cover;
    background-position: center center;
    height: 100vh;
}

.wrapper {
	width: 400px;
	height: 400px;
	border-radius: 10px;
	background: rgba(0,0,0,0.7);
	margin: 7% auto 9%;
	text-align: center;
}

.wrapper .icon-area {
	margin-top: 15px;
	width: 100%;
	height: 100px;
	color: white;
	font-size: 20px;
}

.icon-area span {
  padding-top: 15px;
	font-size: 2em;
	display: inline-block;
	margin-top: 20px;
}

.wrapper .input-area {
    width: 340px;
    margin: 25px auto;
}

.wrapper .btn-area {
    height: 45px;
    width: 100%;
    background-color: #e29a00;
    border-radius: 50px;
    position: relative;
    line-height: 45px;
    text-align: center;
    font-weight: bold;
    color: white;
    margin-top: 10px;
    cursor: pointer;
}

.wrapper .btn-area:hover {
    background-color: #cc8b00;
}

.wrapper input[type='text'], .wrapper input[type="password"] {
    border-radius: 50px;
    font-size: 15px;
    height: 45px;
    border: none;
    padding-left: 15px;
    width: calc(100% - 15px);
    margin-bottom: 10px;
}

.wrapper .link-area {
    margin-top: 30px;
    font-size: 1em;
}

.link-area a {
    text-decoration: none;
    color: #fff;
    vertical-align: middle;
    font-size: 14px;
    margin: 0 25px;
    color: #A9A9A9;
}

</style>


<div class="wrapper">
  <div class="icon-area"><span>Login</span></div>
  <div class="input-area">
    <form class="" action="/login" method="post">
        <input type="text" name="username" placeholder="Username" value="">
        <input type="password" name="password" placeholder="Password" value="">
        <button class="btn-area">Login!</button>
    </form>
  </div>
  <div class="link-area">
    <a href="/register">Sign Up</a>
    <a href="#">Forgot Password?</a>
  </div>

</div>

<% include ./partials/footer.ejs %>
