<% include ./partials/header.ejs %>

<style>


        body {
            font-family: 'Roboto', sans-serif;
            overflow: hidden;
            background-image: url(https://i.postimg.cc/YS83jfwy/1.jpg);
            -webkit-background-size: cover;
            background-size: cover;
            background-position: center center;
            height: 100vh;
        }
        .wrapper {
	width: 400px;
	height: 400px;
	border-radius: 10px;
	background: rgba(0,0,0,0.7);
	margin: 100px auto;
	text-align: center;
}
        .wrapper .icon-area {
	margin-top: 5px;
	width: 100%;
	height: 115px;
	color: white;
	font-size: 20px;
}
.icon-area span {
	font-size: 2em;
	display: inline-block;
	margin-top: 20px;
}

        .wrapper .login-area {
            width: 340px;
            margin: 5px auto;
        }
        .wrapper .btn-area {
            height: 45px;
            width: 100%;
            background-color: #e29a00;
            border-radius: 50px;
            position: relative;
            line-height: 45px;
            text-align: center;
            font-weight: bold;
            color: white;
            margin-top: 10px;
            cursor: pointer;
        }
        .wrapper .btn-area:hover {
            background-color: #cc8b00;
        }

        .wrapper input[type='text'], .wrapper input[type="password"] {
            border-radius: 50px;
            font-size: 15px;
            height: 45px;
            border: none;
            padding-left: 15px;
            width: calc(100% - 15px);
            margin-bottom: 10px;
        }
        .wrapper .link-area {
            margin-top: 30px;
            font-size: 14px;
        }
        .link-area a {
            text-decoration: none;
            color: #fff;
            vertical-align: middle;
            font-size: 14px;
            margin-right: 5px;
            color: #616973;
        }




    </style>


<div class="wrapper">
  <div class="icon-area"><span>Login</span></div>
  <div class="login-area">
    <form class="" action="/login" method="post">
        <input type="text" name="username" placeholder="username" value="">
        <input type="password" name="password" placeholder="password" value="">
        <input type="submit" value="Login!" class="btn-area">
    </form>
  </div>
  <div class="link-area"><a href="#">Forgot password?</a></div>
  <div class="link-area"><a href="/register">Sign Up</a></div>

</div>

<% include ./partials/footer.ejs %>
